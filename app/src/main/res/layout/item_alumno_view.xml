<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/alumnesLayout">

    <ImageView
        android:id="@+id/imatgeViewAlumno"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/nomAlumnoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imatgeViewAlumno"
        android:text="nom"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nivellAlumnoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomAlumnoView"
        android:layout_toEndOf="@id/imatgeViewAlumno"
        android:text="nivell"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/nivellAlumnoView"
        android:layout_marginTop="10dp"/>

</RelativeLayout>